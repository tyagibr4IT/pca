# App
ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000

# DB (Postgres)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/pca

# Redis
REDIS_URL=redis://localhost:6380/0

# ========================================
# OpenAI Provider Configuration
# ========================================
# Options: 'openai' (standard OpenAI) or 'azure' (Azure OpenAI)
OPENAI_PROVIDER=openai

# ========================================
# Standard OpenAI Configuration
# ========================================
# Used when OPENAI_PROVIDER=openai
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=replace_me
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ========================================
# Azure OpenAI Configuration
# ========================================
# Used when OPENAI_PROVIDER=azure
AZURE_MODEL_ENDPOINT=
AZURE_API_VERSION=2024-02-01
AZURE_EMBEDDINGS_MODEL_NAME=text-embedding-3-small
AZURE_CHAT_MODEL_NAME=gpt-4o-mini
AZURE_PROJECT_ID=
AZURE_EMBEDDINGS_DEPLOYMENT_NAME=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TELEMETRY=false

# ========================================
# Azure AD Authentication (for OIDC user login)
# ========================================
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/{tenant}

# ACR / Registry
ACR_LOGIN_SERVER=youracr.azurecr.io

# App JWT
JWT_SECRET=supersecret_jwt_secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
