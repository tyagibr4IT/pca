# App
ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000

# DB (Postgres)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/pca

# Redis
REDIS_URL=redis://localhost:6379/0

# Azure Key Vault (used by production via MSI)
KEYVAULT_NAME=your-keyvault-name
# For local dev you can store secrets here (NOT FOR PROD)
AZURE_CLIENT_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_SECRET=

# Azure / OpenAI
OPENAI_API_TYPE=openai   # openai | azure
OPENAI_API_KEY=replace_me
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=

# Azure Cognitive Search
AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_KEY=

# Azure AD (OIDC)
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/{tenant}

# ACR / Registry
ACR_LOGIN_SERVER=youracr.azurecr.io

# App JWT
JWT_SECRET=supersecret_jwt_secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
