# App
ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000

# DB (Postgres)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/pca

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET=devsecret_changeme_in_prod

# OpenAI Provider Configuration
# Options: "openai" or "azure"
OPENAI_PROVIDER=openai

# Standard OpenAI Configuration (for local development)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI Configuration (for production deployment)
AZURE_MODEL_ENDPOINT=https://api.uhg.com/api/cloud/api-management/ai-gateway/1.0
AZURE_API_VERSION=2025-01-01-preview
AZURE_EMBEDDINGS_MODEL_NAME=text-embedding-ada-002_2
AZURE_CHAT_MODEL_NAME=gpt-4o-mini_2024-07-18
AZURE_PROJECT_ID=your_project_id_here
AZURE_EMBEDDINGS_DEPLOYMENT_NAME=text-embedding-ada-002_2
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_TELEMETRY=False

# Azure Cognitive Search
AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_KEY=

# Azure AD (OIDC)
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/{tenant}

# ACR / Registry
ACR_LOGIN_SERVER=youracr.azurecr.io

# App JWT
JWT_SECRET=supersecret_jwt_secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60